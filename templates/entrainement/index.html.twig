{% extends 'base.html.twig' %}

{% block title %}Entraînement{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/entrainement/index.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-5 mt-4">
            <h3>Veuillez choisir un Pokémon à entraîner :</h3>
        </div>
        <table class="table table-striped table-hover table-bordered">
            <tr>
                <td class="text-center">
                    Image
                </td>
                <td>
                    Nom
                </td>
                <td>
                    Niveau
                </td>
                <td>
                    S'entrainer
                </td>
            </tr>
        {% for pokemon in listPokemonDisponible %}
                <tr>
                    <td class="text-center">
                        <img src="{{ asset( pokemon.idPokemon.photo ) }}" class="img-fluid"></img>
                    </td>
                    <td>
                        {{ pokemon.idPokemon.nom }}
                    </td>
                    <td>
                        {{ pokemon.getNiveau() }}
                    </td>
                    <td>
                        <a href="{{ path('app_entrainement_pokemon', {id:pokemon.id}) }}">
                            <button type="button" class="btn btn-dark">Partir à l'entrainement</button>
                        </a>
                    </td>
                </tr>
        {% endfor %}
        </table>
    </div>
{% endblock %}
