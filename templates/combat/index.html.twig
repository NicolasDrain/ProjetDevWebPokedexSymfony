{% extends 'base.html.twig' %}

{% block title %}Combat{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/combat/index.css') }}">
{% endblock %}

{% block body %}
<div class="container">
        <table class="table table-striped table-hover table-bordered">
            <tr>
                <td class="text-center">
                    Image
                </td>
                <td>
                    Nom
                </td>
                <td>
                    Niveau
                </td>
                <td>
                    Combattre
                </td>
            </tr>
        {% for pokemon in listPokemonDisponible %}
                <tr>
                    <td class="text-center">
                        <img src="{{ asset( pokemon.idPokemon.photo ) }}" class="img-fluid"></img>
                    </td>
                    <td>
                        {{ pokemon.idPokemon.nom }}
                    </td>
                    <td>
                        {{ pokemon.getNiveau() }}
                    </td>
                    <td>
                        <a href="{{ path('app_combat_choix', {id:pokemon.id}) }}">
                            <button type="button" class="btn btn-dark">Partir au combat</button>
                        </a>
                    </td>
                </tr>
        {% endfor %}
        </table>
    </div>
{% endblock %}
