{% extends 'base.html.twig' %}

{% block title %}Dresseur{% endblock %}

{% block body %}
    <h1>Dresseur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dresseur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ dresseur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ dresseur.roles ? dresseur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ dresseur.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ dresseur.nom }}</td>
            </tr>
            <tr>
                <th>Starter_taken</th>
                <td>{{ dresseur.starterTaken ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Argent</th>
                <td>{{ dresseur.argent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dresseur_index') }}">back to list</a>

    <a href="{{ path('app_dresseur_edit', {'id': dresseur.id}) }}">edit</a>

    {{ include('admin/dresseur/_delete_form.html.twig') }}
