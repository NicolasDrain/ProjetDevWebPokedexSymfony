{% extends 'base.html.twig' %}

{% block title %} Détail de {{ pokemon.nom }} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/list/detail.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
            <table class="table">
                <thead class="table table-dark">
                    <tr>
                        <th scope="col">Photo</th>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Type1</th>
                        <th scope="col">Type2</th>
                        <th scope="col">Évolution?</th>
                        <th scope="col">Starter?</th>
                        <th scope="col">Courbe</th>
                        <th scope="col">Peut évoluer?</th>
                    </tr>
                </thead>
                <tbody>
                <tr>
                <td>
                <img src="{{ asset( pokemon.photo ) }}" class="img-fluid img-poke">
                </img>
                </td>
            </div>
                    <td>
            <div class="col">
                {{ pokemon.id }}
            </div>
            </td>
            <td>
            <div class="col">
                {{ pokemon.nom }}
            </div>
            </td>
            <td>
            <div class="col">
                <img src="{{ asset( 'images/type/'~pokemon.idType1.nom~'.png' ) }}" class="img-fluid img-logo-type"></img>
            </div>
            </td>
            <td>
            {% if pokemon.idType2 %}
                <div class="col">
                    <img src="{{ asset( 'images/type/'~pokemon.idType2.nom~'.png' ) }}" class="img-fluid img-logo-type"></img>
                </div>
            {% endif %}
            </td>
            {% if pokemon.isEvolution == true %}
            <td>
                <div class="col">
                    Ce Pokemon est une évolution
                </div>
            </td>
            {% else %}
            <td>
                <div class="col">
                    Ce Pokemon n'est pas une évolution
                </div>
                </td>
            {% endif %}
            {% if pokemon.isStarter == true %}
            <td>
                <div class="col">
                    Ce Pokemon est un starter
                </div>
                </td>
            {% else %}
            <td>
                <div class="col">
                    Ce Pokemon n'est pas un starter
                </div>
                </td>
            {% endif %}
            <td>
            <div class="col">
                {{ pokemon.typeCourbeNiveau }}
            </div>
            </td>
            {% if pokemon.canEvolve == true %}
            <td>
                <div class="col">
                    Ce Pokemon peut évoluer
                </div>
            </td>
            {% else %}
            <td>
                <div class="col">
                    Ce Pokemon ne peut pas évoluer
                </div>
            </td>   
            {% endif %}
        </div>
    </div>
    </tbody>
    </table>
{% endblock %}
